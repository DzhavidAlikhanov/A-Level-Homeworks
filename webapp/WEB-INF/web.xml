<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Mappings for GreetingServlet -->
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>your.package.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/greet</url-pattern>
    </servlet-mapping>

    <!-- Mappings for PrintHeaderServlet -->
    <servlet>
        <servlet-name>PrintHeaderServlet</servlet-name>
        <servlet-class>your.package.PrintHeaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintHeaderServlet</servlet-name>
        <url-pattern>/printheader</url-pattern>
    </servlet-mapping>

    <!-- Mappings for CalculatorServlet -->
    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>your.package.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>

    <!-- Mappings for JsonServlet -->
    <servlet>
        <servlet-name>JsonServlet</servlet-name>
        <servlet-class>your.package.JsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonServlet</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>

</web-app>
